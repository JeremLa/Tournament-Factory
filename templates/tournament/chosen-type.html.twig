{% extends "base.html.twig" %}

{% block title %}
    {{ 'tournament.create' | trans }}
{% endblock %}

{% block body %}
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
            <h1 class="display-5 font-italic">Créer un nouveau tournoi</h1>
            <p class="lead my-3">Utilisez l'outil de création de tournois personnalisé pour créer un tournois correspondant à vos besoins.</p>
        </div>
    </div>

    {% include 'includes/flash-messages.html.twig' %}

    <div class="row">
        <div class="col-md-4 col-sm-12">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <h4 class="mb-2">
                        <span class="text-success" href="#">Elimination</span>
                    </h4>
                    <p class="card-text mb-2">Choisir le type classement permettra de créer un tournoi basé sur un classement, vous pourrez choisir ...</p>
                    <a href="{{ path('create-tournament', {type: 'single-elimination'}) }}">Continuer avec ce type de tournois</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <h4 class="mb-2">
                        <span class="text-primary" href="#">Classement</span>
                    </h4>
                    <p class="card-text mb-2">Choisir le type classement permettra de créer un tournoi basé sur un classement, vous pourrez choisir ...</p>
                    <a href="#" class="text-black-50">Bientôt disponible</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <h4 class="mb-2">
                        <span class="text-info" href="#">Classement + Elimination</span>
                    </h4>
                    <p class="card-text mb-2">Choisir le type classement permettra de créer un tournoi basé sur un classement, vous pourrez choisir ...</p>
                    <a href="#" class="text-black-50">Bientôt disponible</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
