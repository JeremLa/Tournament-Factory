{% extends "base.html.twig" %}
{% form_theme form 'form/custom-label.html.twig' %}

{% block title %}
    {{ 'tournament.create' | trans }}
{% endblock %}

{% block body %}
    <div class="container">
        <h2>{{ "tournament.form.title" | trans({ '%type%' : type | typeEnum | lower } ) }}</h2>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.name) }}
        </div>

        <div class="form-group">
            {{ form_row(form.maxParticipantNumber) }}
        </div>

        <button type="submit" class="btn btn-primary btn-block">{{ 'form.save' | trans }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}