{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/home/login.css') }}">
{% endblock %}

{% block title %}
    {{ 'security.login' | trans }}
{% endblock %}

{% block body %}

    <div class="container mt-3">
        {% if errors %}
            <div class="alert alert-danger">{{ errors.messageKey|trans(errors.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post" class="form-signin">
            <label for="username">Username:</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>

            <label for="password">Password:</label>
            <input type="password" class="form-control mb-4" id="password" name="_password"/>

            <button class="btn btn-lg btn-primary btn-block" type="submit">login</button>
            <a href="{{ path('signup') }}">Cr√©er un compte</a>
        </form>
    </div>
{% endblock %}