{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/errors/error.css') }}">
{% endblock %}
{% block title %}{{ status_code }}{% endblock %}

{% block body %}
    <div id="clouds">
        <div class="cloud x1"></div>
        <div class="cloud x1_5"></div>
        <div class="cloud x2"></div>
        <div class="cloud x3"></div>
        <div class="cloud x4"></div>
        <div class="cloud x5"></div>
    </div>
    <div class='c'>
        <div class='_404'>{{ status_code }}</div>
        <hr>
        <div class='_2'>{{ exception.message }}</div>
        <a class='btn' href='{{ path('my_tournament') }}'>{{ 'tournament.list.myTournaments.title' | trans  }}</a>
    </div>
{% endblock %}